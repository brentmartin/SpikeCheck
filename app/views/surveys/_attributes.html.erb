<%= form_for @survey, :html => { :class => "survey-attributes" } do |f| %>

  <div>
    <%= f.label :intro, :class => 'survey-intro' %>
    <div>
      <%= f.text_field :intro, :class => 'field' %>
    </div>
    <%=f.error_span(:message) %>
  </div>
  <div>
    <%= f.label :user_id, :class => 'user-id' %>
    <div>
      <%= f.text_field :user_id, :class => 'field' %>
    </div>
    <%=f.error_span(:user_id) %>
  </div>
  <div>
    <%= f.label :assessment_id, :class => 'assessment-id' %>
    <div>
      <%= f.text_field :assessment_id, :class => 'field' %>
    </div>
    <%=f.error_span(:assessment_id) %>
  </div>

<% end %>
